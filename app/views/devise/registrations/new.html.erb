<div class="form-size">
  <h2 class="form-title">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, placeholder: "Name", class: "long-textbox" %>
    </div>

    <div class="field">
      <%= f.label :bio %><br />
      <%= f.text_field :bio, autofocus: true, placeholder: "Bio", class: "long-textbox" %>
    </div>

    <div class="field">
      <%= f.label :photo %><br/>
      <%= f.text_field :photo, autofocus: true, autocomplete: "photo", placeholder: "Paste image address (URL) here", class: "long-textbox" %>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autocomplete: "email", placeholder: "Email Address", class: "long-textbox" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "long-textbox" %>
      <% if @minimum_password_length %>
      <em class="info">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm password", class: "long-textbox" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>

  <div class="shared-links sign-up"><%= render "devise/shared/links" %></div>
</div>
