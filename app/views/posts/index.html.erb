<div id="posts" class="page">
  <%# Home button start %>
  <div id="user-page">
    <div class="btn-container">
      <%= link_to "Home", "../../"  %>
    </div>
  </div>
  <%# End fo Home button  %>
  <%# user profile start %>
  <div class="user-container posts">
    <div class="user-profile-pic">
      <img src="<%= @user.photo || '' %>" alt="profile-picture">
    </div>
    <div class="user-info">
      <h3><%= @user.name%></h3>
      <p class="posts-counter">Number of posts: <%= @user.posts_counter || 0 %></p>
    </div>
  </div>
  <%# End of user profile %>
  <article class="posts-container">
    <% @posts.each do |post| %>
    <%= render_posts(@user, post) %>
  <% end %>
  </article>
</div>
